<script>
	$(document).ready(function(){
		$('#sh-foot').click(function(e){
			$('.footer-toggle').slideToggle();
			
			if($(this).hasClass('up')){
				$(this).html('Hide Footer <i class="fa fa-caret-up careD"></i>').removeClass('up');
			}else{
				$(this).html('Show Footer <i class="fa fa-caret-down careD"></i>').addClass('up');
			}
			$('html, body').animate({
	           scrollTop: $(document).height()
	        }, 2000);
			e.preventDefault();
		});
	});

	$('.qty-item').click(function(){		
		$('.qty-item').removeClass('active');
                $(this).addClass('active');
                $('.border-style').addClass('active');
	});
        $('button.btn').click(function(){
            if(!$('.qty-item').hasClass('active')){
                $('.alert').addClass('active')
                setTimeout(function(){$('.alert').removeClass('active');}, 1500);

            }else{$(this).submit();}
        })
        $('input:radio').change(function(e){$(this).siblings('input:radio').prop('checked',$(this).prop('checked'));});
</script>
